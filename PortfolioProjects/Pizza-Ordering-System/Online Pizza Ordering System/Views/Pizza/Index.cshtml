@model IEnumerable<Pizza>
@{
    ViewData["Title"] = "All Pizzas";
}
<h1>@ViewData["Title"]</h1>
<div class="container mt-4">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">@item.Description</p>
                    </div>

                    <div class="text-center mt-2 selectedPriceContainer" style="display:none;">
                       <span class="selectedPriceLabel">-</span> €
                    </div>


                    <input type="hidden" class="selectedSizeInput" name="selectedSize" value="">

                    <div class="d-flex justify-content-around border-top pt-2 pizza-sizes">
                        <span class="badge bg-secondary size-btn" data-size="Small" data-price="@item.SmallPrice">Small: @item.SmallPrice €</span>
                        <span class="badge bg-secondary size-btn" data-size="Medium" data-price="@item.MediumPrice">Medium: @item.MediumPrice €</span>
                        <span class="badge bg-secondary size-btn" data-size="Large" data-price="@item.LargePrice">Large: @item.LargePrice €</span>
                    </div>

                    <div class="card-body">
                        <a href="#" class="btn btn-danger w-100">+Add to Cart</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
